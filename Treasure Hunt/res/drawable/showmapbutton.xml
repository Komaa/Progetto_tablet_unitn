<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
	<item android:state_pressed="true" >
 		<shape android:shape="oval"  >
        	<stroke android:width="2sp" android:color="#B54703" />
         	<gradient android:angle="-90" android:startColor="#C41E2C" android:endColor="#F0B474"  />            
     	</shape>
	</item>
	<item >
    	<shape android:shape="oval">
    		<solid android:color="#eeffffff" />
    		<stroke android:width="2sp" android:color="#B54703" />
    		<gradient android:angle="-90" android:centerX="35%" android:centerColor="#FFC869" android:startColor="#FF2F05" android:endColor="#FFFFFF"  />
		</shape>
	</item>
</selector>