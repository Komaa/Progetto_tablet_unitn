<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >
    
	<RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="#DF884E"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="12dp"
            android:background="#ccffffff"
            android:orientation="vertical" >
	
		    <TextView
		        android:id="@+id/map_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
				android:layout_marginTop="15dp"
				android:textColor="#000000"
		        android:textSize="30sp"
		        android:text="Treasure Hunt!"/>
		    
		    <View
                android:id="@+id/divider1"
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:layout_below="@+id/map_name"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#DF884E" />
	
		    <ImageView
		        android:contentDescription=""
		        android:id="@+id/checkpointImage"
		        android:layout_width="20dp"
		        android:layout_height="20dp"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/divider1"
		        android:layout_marginLeft="30dp"
		        android:layout_marginTop="17dp"
		        android:src="@drawable/checkpointimg" />
		    
		    <ImageView
		        android:contentDescription=""
		        android:id="@+id/feetImage"
		        android:layout_width="20dp"
		        android:layout_height="20dp"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/checkpointImage"
		        android:layout_marginLeft="30dp"
		        android:layout_marginTop="17dp"
		        android:src="@drawable/feet" />
		    
		    <ImageView
		        android:contentDescription=""
		        android:id="@+id/fireImage"
		        android:layout_width="20dp"
		        android:layout_height="20dp"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/feetImage"
		        android:layout_marginLeft="30dp"
		        android:layout_marginTop="17dp"
		        android:src="@drawable/fire" />
		    
		    <TextView
		        android:id="@+id/checkpoint"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBottom="@+id/checkpointImage"
		        android:layout_toRightOf="@+id/checkpointImage"
		        android:layout_marginLeft="12dp"
		        android:text="Checkpoints:"
		        android:textColor="#000000"
		        android:textSize="14sp" />
	
		    <TextView
		        android:id="@+id/distance"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBottom="@+id/feetImage"
		        android:layout_marginLeft="12dp"
		        android:layout_toRightOf="@+id/feetImage"
		        android:textColor="#000000"
		        android:text="Distance: "
		        android:textSize="14sp" />
	
		    <TextView
		        android:id="@+id/difficulty"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBottom="@+id/fireImage"
		        android:layout_marginLeft="12dp"
		        android:layout_toRightOf="@+id/fireImage"
		        android:textColor="#000000"
		        android:text="Difficulty: "
		        android:textSize="14sp" />
		    
		    <TextView
		        android:id="@+id/det_checkpoint"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignTop="@+id/checkpoint"
		        android:layout_alignBottom="@+id/checkpoint"
		        android:layout_marginLeft="34dp"
		        android:layout_toRightOf="@+id/checkpoint"
		        android:textColor="#000000"
		        android:textSize="14sp" />
		    
		    <TextView
		        android:id="@+id/det_distance"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBottom="@+id/distance"
		        android:layout_alignLeft="@+id/det_checkpoint"
		        android:layout_alignTop="@+id/distance"
		        android:layout_toRightOf="@+id/distance"
		        android:textColor="#000000"
		        android:textSize="14sp" />
		    
		    <TextView
		        android:id="@+id/det_difficulty"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBottom="@+id/difficulty"
		        android:layout_alignLeft="@+id/det_checkpoint"
		        android:layout_alignTop="@+id/difficulty"
		        android:layout_toRightOf="@+id/difficulty"
		        android:textColor="#000000"
		        android:textSize="14sp" />
		    
		    <View
                android:id="@+id/divider2"
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:layout_below="@+id/difficulty"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="#DF884E" />

		    <TextView
		        android:id="@+id/det_description"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignLeft="@+id/map_name"
		        android:layout_below="@+id/fireImage"
		        android:layout_marginTop="30dp"
		        android:textColor="#000000"
		        android:textSize="16sp" />

		    <Button
		        android:id="@+id/show_map"
		        android:layout_width="150dp"
		        android:layout_height="45dp"
		        android:layout_alignLeft="@+id/divider2"
		        android:layout_alignRight="@+id/divider2"
		        android:layout_below="@+id/det_description"
		        android:layout_marginTop="52dp"
		        android:text="JOIN THE GAME!" />

		    
	    
		</RelativeLayout>
	</RelativeLayout>
</ScrollView>