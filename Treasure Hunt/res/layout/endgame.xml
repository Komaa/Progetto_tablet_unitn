<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="#B54703"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="6dp"
            android:background="#ccffffff"
            android:orientation="vertical" >
            
        	<ImageView
				android:id="@+id/youwinimage"
				android:layout_width="match_parent"
				android:layout_height="150dp"
				android:src="@drawable/youwin" />
        	
        	<ImageView
        	    android:id="@+id/treasureimage"
            	android:layout_width="match_parent"
            	android:layout_height="150dp"
            	android:layout_below="@+id/youwinimage"
            	android:src="@drawable/treasure" />
        	
        	<TextView
        	    android:id="@+id/points"
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_below="@+id/treasureimage"
				android:textSize="16sp"
				android:textColor="#000000"
        	    android:text="You earned\n150 points" 
        	    android:gravity="center" />
        	
        	<View
                android:id="@+id/divider2"
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:layout_below="@+id/points"
                android:layout_marginTop="5dp"
                android:background="#B54703" />

        	<ImageButton
        	    android:id="@+id/finish_game"
        	    android:layout_width="match_parent"
        	    android:layout_height="fill_parent"
        	    android:layout_below="@+id/divider2"
        	    android:background="@drawable/collectbutton"
        	    android:src="@drawable/collect" />

		</RelativeLayout>
    </RelativeLayout>
</ScrollView>
